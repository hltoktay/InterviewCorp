                                <label class="custom-control-label" for="defaultLoginFormRemember">Remember me</label>
                            </div>
                        </div>
                        <div>
                            <!-- Forgot password -->
                            <a href="" class="indigo-text">Forgot password?</a>
                        </div>
                    </div>

                    <!-- Sign in button -->
                    <button class="btn btn-dark btn-block my-4" type="submit">Sign in</button>

                    <!-- Register -->
                    <p>Not a member?
                        <a href="/register" class="indigo-text">Register</a>
                    </p>

                    <!-- Social login -->
                    <p>or sign in with :</p>

                    <a href="#" class="mx-2 indigo-text" role="button"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="mx-2 indigo-text" role="button"><i class="fab fa-linkedin-in"></i></a>
                    <a href="#" class="mx-2 indigo-text" role="button"><i class="fab fa-google"></i></a>
                    <a href="#" class="mx-2 indigo-text" role="button"><i class="fab fa-github"></i></a>

                </form>
